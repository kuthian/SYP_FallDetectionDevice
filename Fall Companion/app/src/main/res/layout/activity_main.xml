<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fallcompanion.MainActivity">

    <Button
        android:id="@+id/smsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send SMS"
        android:onClick="SendSMS"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.116" />

    <Button
        android:id="@+id/bluetoothButton"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="150dp"
        android:onClick="open_bluetooth"
        android:text="Bluetooth"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/emergencyContactsButton"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginRight="52dp"
        android:layout_marginTop="0dp"
        android:onClick="open_emergency_contacts"
        android:text="Emergency\nContacts"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bluetoothButton" />

    <Button
        android:id="@+id/fallDataButton"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="30dp"
        android:onClick="open_fall_data"
        android:text="Fall Data"
        app:layout_constraintLeft_toLeftOf="@+id/bluetoothButton"
        app:layout_constraintTop_toBottomOf="@+id/bluetoothButton" />

    <Button
        android:id="@+id/alertSettingsButton"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="30dp"
        android:onClick="open_alert_settings"
        android:text="Alert\nSettings"
        app:layout_constraintRight_toRightOf="@+id/emergencyContactsButton"
        app:layout_constraintTop_toBottomOf="@+id/emergencyContactsButton" />

</android.support.constraint.ConstraintLayout>
